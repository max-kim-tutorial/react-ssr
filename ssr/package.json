{
  "name": "@ssr-react/ssr",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "dev": "webpack-dev-server --env=env=dev --profile",
    "start": "yarn build:dev && node ./dist/server.js",
    "start:wds": "webpack-dev-server --env=env=dev --profile",
    "build:dev": "rm -rf dist/ && NODE_ENV=development yarn build:client && NODE_ENV=development yarn build:server",
    "build:server": "webpack --env=env=server --progress --profile",
    "build:client": "webpack --env=env=client --progress --profile"
  },
  "dependencies": {
    "express": "^4.18.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.3.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@swc/core": "^1.2.230",
    "@types/express": "^4.17.13",
    "@types/react-helmet": "^6.1.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/webpack-dev-middleware": "^5.3.0",
    "@types/webpack-env": "^1.17.0",
    "@types/webpack-hot-middleware": "^2.25.6",
    "browserslist": "^4.21.3",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.4",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-dev-server": "^4.10.0",
    "webpack-hot-middleware": "^2.25.2",
    "webpack-node-externals": "^3.0.0"
  }
}
